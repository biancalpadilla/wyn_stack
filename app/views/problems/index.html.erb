<p id="notice"><%= notice %></p>

<%= link_to '', new_problem_path, class: 'glyphicon glyphicon-plus', style: "font-size:28px;" %>
<br>
<br>
<br>
<div class="panel panel-default">

  <div class="panel-heading"><h1>General Questions</h1></div>


  <div class='question'>
  <% @problems.each do |problem| %>
  <br>
    <p class='titlelink'><%= link_to problem.title, problem,  style: "font-size:25px;" %></p>
    <p class='description'><%= problem.description %></p>
    <p class='askedby'>Asked by <%= problem.name %> - <%= time_ago_in_words(problem.created_at) %> ago</p>
    <hr>
    <% end %>
  </div>
</div>

