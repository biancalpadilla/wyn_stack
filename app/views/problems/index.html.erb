<p id="notice"><%= notice %></p>

<h1>Problems</h1>

<br>
<%= link_to 'New Problem', new_problem_path %>

<br>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Asked</th>
      <th>By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.title %></td>
        <td><%= problem.description %></td>
        <td><%= time_ago_in_words(problem.created_at) %></td>
        <td><%= problem.name %></td>
        <td><%= link_to 'Show', problem %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Problem', new_problem_path %>

