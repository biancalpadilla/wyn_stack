<p id="notice"><%= notice %></p>

<div class="panel panel-info">

  <div class="panel-heading"><h1>General Questions</h1></div>

    <br>
    <%= link_to 'New Question', new_problem_path, class: 'btn btn-info' %>

      <br>
      <br>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Asked</th>
            <th>By</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @problems.each do |problem| %>
            <tr>
              <td><%= problem.title %></td>
              <td><%= problem.description %></td>
              <td><%= time_ago_in_words(problem.created_at) %></td>
              <td><%= problem.name %></td>
              <td><%= link_to 'Show', problem %></td>

            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <%= link_to 'New Question', new_problem_path, class: 'btn btn-info' %>
      <br>
      <br>
</div>

