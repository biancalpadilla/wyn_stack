<p id="notice"><%= notice %></p>

<h1>Interview Questions</h1>

<br>

<%= link_to 'New Question', new_interview_path %>
<br>
<br>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Asked</th>
      <th>By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
      <tr>
        <td><%= interview.title %></td>
        <td><%= interview.description %></td>
        <td><%= time_ago_in_words(interview.created_at) %></td>
        <td><%= interview.name %></td>
        <td><%= link_to 'Show', interview %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

