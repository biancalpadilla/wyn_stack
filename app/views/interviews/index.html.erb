<p id="notice"><%= notice %></p>

<%#Replaced New question text with glyphicons.%>
<%= link_to '', new_interview_path, class: 'glyphicon glyphicon-plus', style: "font-size:28px;" %>
  <br>
  <br>
  <br>

<div class="panel panel-default">

  <div class="panel-heading"><h1>Interview Questions</h1></div>

  <div class='question'>
  <% @interviews.each do |interview| %>
   <hr>
    <p class='titlelink'><%= link_to interview.title, interview,  style: "font-size:25px;" %></p>
    <p class='description'><%= interview.description %></p>
    <p class='askedby'>Asked by <%= interview.name %> - <%= time_ago_in_words(interview.created_at) %> ago</p>
    <% end %>
  </div>

</div>
